<div class=" my-5 py-5" style="min-height: 100vh;">
<div class="container">

  <div class="text-left p-3">

    <h3 class="feature-title"><strong>User Update</strong></h3>
    </div>

<div class="col-12 mb-3">
  <% users.forEach(function( eachUser) { %>
  <form method="post" action="/edituser/<%= eachUser._id %>">
  <div class="row">
    <div class="col-12">

        <div class="card">
            <div class="w-100">
              <div class="p-3">

                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/adminpage">Home</a></li>
                    <li class="breadcrumb-item"><a href="/users">User List</a></li>
                    <% users.forEach(function( eachUser) { %><li class="breadcrumb-item active" aria-current="page"><%= eachUser.username %></li><% }) %>
                  </ol>
                </nav>

              </div>

            <div class="row px-4">
            <div class="col-12 pr-4">

                <div class="form-group row">
                  <label for="name" class="col-lg-2 col-md-12 col-form-label col-form-label-sm">Name:</label>
                  <input type="text" class="form-control col-lg-10 col-md-12 form-control-sm" name="username" id="name" placeholder="Full Name" value='<%= eachUser.username %>'></input>
                </div>


                <div class="form-group row">
                  <label for="email" class="col-lg-2 col-md-12 col-form-label col-form-label-sm">Email:</label>
                  <input class="form-control col-lg-10 col-md-12 form-control-sm" id="email" name="email" placeholder="Email Address" value='<%- eachUser.email %>'></input>
                </div>

                <div class="form-group row">
                  <label for="active" class="col-lg-2 col-md-12 col-form-label col-form-label-sm">Active?</label>
                  <select id="active" class="col-lg-10 col-md-12 form-control form-control-sm" name="isAdmin" placeholder="">
                    <option value=""><%- eachUser.isAdmin %></option>
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                  </select>
                </div>


                <button class="btn btn-primary my-3 mx-0 rounded">Update</button>




            </div>

            </div>
            </div>
            </div>
            </div>

        </div>

      </form>
        <% }) %>
      </div>

    </div>

    </div>
