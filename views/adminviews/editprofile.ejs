<div class=" my-5 py-5" style="min-height: 100vh;">
<div class="container">

  <div class="text-left p-3">

    <h3 class="feature-title"><strong>Edit Profile</strong></h3>
    </div>

<div class="col-12 mb-3">

  <form method="post" action="/editprofile">
  <div class="row">
    <div class="col-12">

        <div class="card">
            <div class="w-100">
              <div class="p-3">

                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/adminpage">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><%= user.username %></li>
                  </ol>
                </nav>

              </div>

            <div class="row px-4">
            <div class="col-12 pr-4">

                <div class="form-group row">
                  <label for="name" class="col-lg-2 col-md-12 col-form-label col-form-label-sm">Name:</label>
                  <input type="text" class="form-control col-lg-10 col-md-12 form-control-sm" name="username" id="name" placeholder="Full Name" value='<%= user.username %>'></input>
                </div>


                <div class="form-group row">
                  <label for="email" class="col-lg-2 col-md-12 col-form-label col-form-label-sm">Email:</label>
                  <input class="form-control col-lg-10 col-md-12 form-control-sm" id="email" name="email" placeholder="Email Address" value='<%- user.email %>'></input>
                </div>

                <div class="form-group row">
                  <label for="password" class="col-lg-2 col-md-12 col-form-label col-form-label-sm">Password:</label>
                  <input class="form-control col-lg-10 col-md-12 form-control-sm" type="password" id="password" name="password" value='<%- user.password %>'></input>
                </div>


                <button class="btn btn-sm btn-primary my-3 mx-0 rounded">Update</button>
                <a href="/adminpage" class="btn btn-sm btn-danger my-3 mx-1 rounded">Cancel</a>




            </div>

            </div>
            </div>
            </div>
            </div>

        </div>

      </form>

      </div>

    </div>

    </div>
