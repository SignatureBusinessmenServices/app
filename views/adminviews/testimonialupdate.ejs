<div class="mx-4 my-5 py-5" style="min-height: 100vh;">
  <div class="text-left p-3">
    <h3 class="feature-title"><strong>Testimonial Update</strong></h3>
    <div class="p-3">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/adminpage">Home</a></li>
          <li class="breadcrumb-item"><a href="/testimonialslist">Testimonials List</a></li>
          <% testimonials.forEach(function( eachTestimonial) { %><li class="breadcrumb-item active" aria-current="page"><%= eachTestimonial.company %></li>
        </ol>
      </nav>
    </div>

  </div><% }) %>
<div class="row">

<div class="container col-lg-6 col-md-12 pr-1">

<div class="col-12 mb-3">
  <% testimonials.forEach(function( eachTestimonial) { %>
  <form method="post" action="/edittestimonial/<%= eachTestimonial._id %>" enctype="multipart/form-data">
  <div class="row">
    <div class="col-12">



        <div class="card">
            <div class="w-100">
            <div class="row px-4">
            <div class="col-12">
              <div class="input-group mt-3 rounded">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="inputGroupFileAddon01" style="background-color: #4285f4; color: white; font-weight: lighter ">Update Company Logo:</span>
                </div>
                <div class="custom-file">
                  <input type="file" class="custom-file-input" id="inputGroupFile01"
                    aria-describedby="inputGroupFileAddon01" name="testimonialImage">
                  <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                </div>
              </div>
                <hr class="my-4" style="background-color: #4285f4 ">
              <nav class="mt-3" aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><strong>English</strong></li>
                </ol>
              </nav>

                <div class="form-group px-3 row">
                  <label for="title" class="col-lg-3 col-md-12 col-form-label col-form-label-sm" style="padding-left: 0">Company Name:</label>
                  <input type="text" class="form-control col-lg-9 col-md-12 form-control-sm" name="company" id="title" placeholder="Company Name" value='<%= eachTestimonial.company %>'></input>
                </div>

                <div class="form-group px-3 row">
                  <label for="headline" class="col-lg-3 col-md-12 col-form-label col-form-label-sm" style="padding-left: 0">Comment By:</label>
                  <input class="form-control col-lg-9 col-md-12 form-control-sm" id="headline" name="person" placeholder="Comment by" value='<%- eachTestimonial.person %>'></input>
                </div>

                <div class="form-group px-3 row">
                  <label for="details" class="col-lg-3 col-md-12 col-form-label col-form-label-sm" style="padding-left: 0">Testimonial:</label>
                  <textarea class="col-lg-9 col-md-12 form-control form-control-sm" rows="6" name="testimonial" id="details" placeholder=" " value=''><%- eachTestimonial.testimonial %></textarea>
                </div>

                <hr class="my-4" style="background-color: #4285f4 ">

                <nav class="mt-3" aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><strong>Arabic</strong></li>
                  </ol>
                </nav>

                  <div class="form-group px-3 row">
                    <label for="title" class="col-lg-3 col-md-12 col-form-label col-form-label-sm" style="padding-left: 0">Company Name:</label>
                    <input type="text" class="form-control col-lg-9 col-md-12 form-control-sm" dir="rtl" name="arcompany" id="title" placeholder="Company Name" value='<%= eachTestimonial.arcompany %>'></input>
                  </div>

                  <div class="form-group px-3 row">
                    <label for="headline" class="col-lg-3 col-md-12 col-form-label col-form-label-sm" style="padding-left: 0">Comment By:</label>
                    <input class="form-control col-lg-9 col-md-12 form-control-sm" dir="rtl" id="headline" name="arperson" placeholder="Comment by" value='<%- eachTestimonial.arperson %>'></input>
                  </div>

                  <div class="form-group px-3 row">
                    <label for="details" class="col-lg-3 col-md-12 col-form-label col-form-label-sm" style="padding-left: 0">Testimonial:</label>
                    <textarea class="col-lg-9 col-md-12 form-control form-control-sm" dir="rtl" rows="6" name="artestimonial" id="details" placeholder=" " value=''><%- eachTestimonial.artestimonial %></textarea>
                  </div>

            </div>

            </div>
              <button class="btn btn-primary my-3 mx-4 float-right rounded">Update</button>
            </div>
            </div>
            </div>

        </div>

      </form>
        <% }) %>
      </div>

    </div>

          <div class="container col-lg-6 col-md-12 pl-1">
            <div class="col-12 mb-2">
              <% testimonials.forEach(function( eachTestimonial) { %>
              <div class="row">
                <div class="col-12">
                  <div id="accordion">
                    <div class="card">
                      <!-- <div class="text-left breadcrumb p-2">
                        <h5 class="feature-title">Blog Preview</h5>
                        </div> -->

                        <nav class="mx-3 mt-3" aria-label="breadcrumb">
                          <ol class="breadcrumb">
                            <li class="breadcrumb-item">Testimonial Preview - English</li>
                          </ol>
                        </nav>
                        <div>
                          <div class="p-4 p-md-5 text-black">
                            <div class="row px-0 bg-white">
                              <div class="col-lg-6 col-md-12 pt-3 text-center">
                                <img class="img-fluid" src=<%= eachTestimonial.testimonialImage %>>
                              </div>
                              <div class="col-lg-6 col-md-12 pt-3">
                                <h3><%= eachTestimonial.company %></h3>
                                <p class="font-italic"><%- eachTestimonial.testimonial %></p>
                                <p class="grey-text"><%= eachTestimonial.person %></p>
                               </div>

                            </div>
                          </div>
                        </div>
                        </div>
                      </div>
                    </div>
                  </div>
                    <% }) %>
                </div>



                  <div class="col-12">
                    <% testimonials.forEach(function( eachTestimonial) { %>
                    <div class="row">
                      <div class="col-12">
                        <div id="accordion">
                          <div class="card">
                            <!-- <div class="text-left breadcrumb p-2">
                              <h5 class="feature-title">Blog Preview</h5>
                              </div> -->

                              <nav class="mx-3 mt-3" aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                  <li class="breadcrumb-item">Testimonial Preview - Arabic</li>
                                </ol>
                              </nav>
                              <div dir="rtl">
                                <div class="p-4 p-md-5 text-black">
                                  <div class="row px-0 bg-white">
                                    <div class="col-lg-6 col-md-12 pt-3 text-center">
                                      <img class="img-fluid" src=<%= eachTestimonial.testimonialImage %>>
                                    </div>
                                    <div class="text-right col-lg-6 col-md-12 pt-3">
                                      <h3><%= eachTestimonial.arcompany %></h3>
                                      <p class="font-italic"><%- eachTestimonial.artestimonial %></p>
                                      <p class="grey-text"><%= eachTestimonial.arperson %></p>
                                     </div>

                                  </div>
                                </div>
                              </div>
                              </div>
                            </div>
                          </div>
                        </div>
                          <% }) %>
                      </div>
                    </div>
    </div>

    </div>
