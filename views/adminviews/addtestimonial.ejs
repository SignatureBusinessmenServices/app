<div class=" my-5 py-5" style="min-height: 100vh;">
<div class="container">

  <div class="text-left p-3">

    <h3 class="feature-title"><strong>Add New Testimonial</strong></h3>
    <div class="pb-0 mb-0">

      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/adminpage">Home</a></li>
          <li class="breadcrumb-item"><a href="/testimonialslist">Testimonials List</a></li>
          <li class="breadcrumb-item active" aria-current="page">Add New Testimonial</li>
        </ol>
      </nav>

    </div>
    </div>


<div class="col-12 mb-3">
  <form method="post" action="/newtestimonial" enctype="multipart/form-data">
  <div class="row">
    <div class="col-12">
      <div class="card">
          <div class="w-100">
          <div class="row px-4 mb-3">
          <div class="col-12">

              <%- typeof msg != 'undefined' ? msg: '' %>

            <div class="input-group mt-3 rounded">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroupFileAddon01" style="background-color: #4285f4; color: white; font-weight: lighter ">Update Company Logo:</span>
              </div>
              <div class="custom-file">
                <input type="file" class="custom-file-input" id="inputGroupFile01"
                  aria-describedby="inputGroupFileAddon01" name="testimonialImage">
                <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
              </div>
            </div>

              <hr class="my-4" style="background-color: #4285f4 ">
            <nav class="mt-3" aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><strong>English</strong></li>
              </ol>
            </nav>

              <div class="form-group px-3 row">
                <label for="title" class="col-lg-3 col-md-12 col-form-label col-form-label-sm" style="padding-left: 0">Company Name:</label>
                <input type="text" class="form-control col-lg-9 col-md-12 form-control-sm" name="company" id="title" placeholder="Company Name" value=''></input>
              </div>

              <div class="form-group px-3 row">
                <label for="headline" class="col-lg-3 col-md-12 col-form-label col-form-label-sm" style="padding-left: 0">Comment By:</label>
                <input class="form-control col-lg-9 col-md-12 form-control-sm" id="headline" name="person" placeholder="Comment by" value=''></input>
              </div>

              <div class="form-group px-3 row">
                <label for="details" class="col-lg-3 col-md-12 col-form-label col-form-label-sm" style="padding-left: 0">Testimonial:</label>
                <textarea class="col-lg-9 col-md-12 form-control form-control-sm" rows="6" name="testimonial" id="details" placeholder=" " value=''></textarea>
              </div>

              <hr class="my-4" style="background-color: #4285f4 ">

              <nav class="mt-3" aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><strong>Arabic</strong></li>
                </ol>
              </nav>

                <div class="form-group px-3 row">
                  <label for="title" class="col-lg-3 col-md-12 col-form-label col-form-label-sm" style="padding-left: 0">Company Name:</label>
                  <input type="text" class="form-control col-lg-9 col-md-12 form-control-sm" dir="rtl" name="arcompany" id="title" placeholder="Company Name" value=''></input>
                </div>

                <div class="form-group px-3 row">
                  <label for="headline" class="col-lg-3 col-md-12 col-form-label col-form-label-sm" style="padding-left: 0">Comment By:</label>
                  <input class="form-control col-lg-9 col-md-12 form-control-sm" dir="rtl" id="headline" name="arperson" placeholder="Comment by" value=''></input>
                </div>

                <div class="form-group px-3 row">
                  <label for="details" class="col-lg-3 col-md-12 col-form-label col-form-label-sm" style="padding-left: 0">Testimonial:</label>
                  <textarea class="col-lg-9 col-md-12 form-control form-control-sm" dir="rtl" rows="6" name="artestimonial" id="details" placeholder=" " value=''></textarea>
                </div>

          </div>

          </div>
            <button class="btn btn-primary my-3 mx-4 float-right rounded">Update</button>
          </div>
          </div>
            </div>

        </div>

      </form>

      </div>

    </div>
    </div>
