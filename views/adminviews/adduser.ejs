<div class=" my-5 py-5" style="min-height: 100vh;">
<div class="container">

  <div class="text-left p-3">

    <h3 class="feature-title"><strong>Add New User</strong></h3>
    </div>

<div class="col-12 mb-3">
  <form method="post" action="/newuser">
  <div class="row">
    <div class="col-12">

        <div class="card">
            <div class="w-100">
              <div class="p-3">

                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/adminpage">Home</a></li>
                    <li class="breadcrumb-item"><a href="/users">User List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Add New</li>
                  </ol>
                </nav>

              </div>

            <div class="row px-4">
            <div class="col-12 px-5">
               <%- typeof msg != 'undefined' ? msg: '' %>

                <div class="form-group row pr-3">
                  <label for="username" class="col-lg-3 col-md-12 col-form-label col-form-label-sm" style="padding-left: 0">Name:</label>
                  <input type="text" class="form-control col-lg-9 col-md-12 form-control-sm" name="username" id="username" placeholder="Full Name" value=''></input>
                </div>


                <div class="form-group row pr-3">
                  <label for="inputEmail" class="col-lg-3 col-md-12 col-form-label col-form-label-sm" style="padding-left: 0">Email:</label>
                  <input type="email" class="form-control col-lg-9 col-md-12 form-control-sm" id="inputEmail" name="email" placeholder="Email Address" required></input>
                </div>

                <div class="form-group row pr-3">
                  <label for="inputPassword" class="col-lg-3 col-md-12 col-form-label col-form-label-sm" style="padding-left: 0">Password:</label>
                  <input type="text" class="form-control col-lg-9 col-md-12 form-control-sm" id="inputPassword" name="password" placeholder="Password" required></input>
                </div>

            </div>

            </div>
            <button type="submit" class="btn btn-sm btn-primary my-3 ml-5 float-left rounded">Add User</button>
            <a href="/adminpage" class="btn btn-sm btn-danger my-3 mx-1 float-left rounded">Cancel</a>
            </div>
            </div>
            </div>

        </div>

      </form>

      </div>

    </div>
    </div>
