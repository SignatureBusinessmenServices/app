<div class="pt-5" style="height: 90%" >


  <!-- Mask & flexbox options-->
  <div class="mask pt-5 justify-content-center align-items-center">

    <!-- Content -->
    <div class="pt-5 container">

      <!--Grid row-->
      <div class="row wow fadeIn">

        <!--Grid column-->
        <div class="col-md-12 mb-4 black-text text-center">

        <div class="col-md-8 align-items-center justify-content-center m-auto">
        <form id="login" class="form-signin" action="/admin" method="post">
          <h1 id="login-head" class="h3 mb-3 font-weight-normal">Log In</h1>
          <div>
            <% for (let i = 0; i < message.length; i++) {%>
             <p id="login-error" class="text-left bg-light rounded p-2"><%=message%>!</p>
            <% } %>

            <%- typeof msg != 'undefined' ? msg: '' %>
          </div>

          <label for="inputEmail" class="sr-only">Email address</label>
          <input type="email" id="inputEmail" name="email"  class="form-control mb-2" placeholder="Email address" required="" autofocus="">
          <label for="inputPassword" class="sr-only">Password</label>
          <input type="password" name="password" id="inputPassword" class="form-control mb-2" placeholder="Password" required="">
          <div class="mb-3">
          </div>
          <div class="col-12 m-0 p-0">
          <!-- <a href="" target="" data-toggle="modal" data-target="#register" class="blue-text float-left mr-3 pt-2">Register</a> -->
          <a href="" target="" data-toggle="modal" data-target="#newpassword" class="blue-text float-left pt-2">Forgot Password</a>
          <button id="signin" class="btn btn-md btn-primary float-right" type="submit">Sign in</button>
          </div>
        </form>
        </div>
      </div>


    <div class="col-md-12">
    </div>

    <div class="modal fade" id="register" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title" id="exampleModalCenterTitle"><strong>Register</strong></h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span id="close-btn" aria-hidden="true">&times;</span>
            </button>
          </div>
           <div class="modal-body">
             <!-- Form -->
             <form class="form-signin" action="/register" method="post">

               <label for="inputEmail" class="sr-only">Email address</label>
               <input type="email" id="inputEmail" name="email"  class="form-control mb-2" placeholder="Email address" required="" autofocus="">
               <label for="inputPassword" class="sr-only">Password</label>
               <input type="password" name="password" id="inputPassword" class="form-control mb-2" placeholder="Password" required="">
               <div class="mb-3">
               </div>
               <div class="col-12 m-0 p-0">
               <button class="btn btn-md btn-primary float-right" type="submit">Register</button>
               </div>
             </form>
             <!-- Form -->
        </div>
      </div>
    </div>
  </div>


    <div class="modal fade" id="newpassword" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title" id="exampleModalCenterTitle"><strong>Reset Password</strong></h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span id="close-btn" aria-hidden="true">&times;</span>
            </button>
          </div>
           <div class="modal-body">
             <!-- Form -->
             <form class="form-signin" action="/resetpassword" method="post">

               <label for="inputEmail" class="sr-only">Email address</label>
               <input type="email" id="inputEmail" name="email"  class="form-control mb-2" placeholder="Email address" required="" autofocus="">
               <div class="mb-3">
               </div>
               <div class="col-12 m-0 p-0">
               <button class="btn btn-md btn-primary float-right" type="submit">Submit</button>
               </div>
             </form>
             <!-- Form -->
        </div>
      </div>
    </div>
  </div>


</div>
</div>
</div>



</div>
